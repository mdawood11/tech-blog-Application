<h2>Edit or Delete Post</h2>
<form class="card-body edit-post-form">
  <div class="form-row">
    <label for="post-title" class="form-label">Title</label>
    <input
      name="post-title"
      id="post-title"
      type="text"
      value="{{post.title}}"
      class="form-input form-control"
    />
  </div>

  <div class="form-row">
    <label class="form-label" for="content">Content</label>
    <input
      name="content"
      id="content"
      type="text"
      value="{{post.content}}"
      class="form-input form-control"
    />
  </div>
  <button id="update-post" type="submit" class="btn btn-primary">UPDATE YOUR
    POST</button>
  <button
    id="delete-post"
    type="submit"
    class="btn delete-post-btn btn-primary"
  >DELETE YOUR POST</button>
</form>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>