<h3> Your Posts</h3>
<div class="centerthisbutton">
  <button type="submit" class="btn btn-primary"><a href="/dashboard/new">ADD
      YOUR POST</a></button>
</div>
<section>
  {{#if posts.length}}

    {{#each posts as |post|}}
      <article class="post">
        <div class="container-fluid dashboard-container">
          <div class="card-header dashboard-post">
            <h3 class="card-title post-title"><a
                class="link"
                href="/dashboard/edit/{{id}}"
              >{{title}}</a></h3>
            <div class="card-body post-body">

              <p class="card-body post-content">{{content}}</p>

              <h4 class="card-text post-author">Post Created by
                <span class="post-username">{{user.username}}</span>
                on
                {{format_date post.createdAt}}</h4>
            </div>
          </div>
        </div>
      </article>
    {{/each}}

  {{/if}}
</section>